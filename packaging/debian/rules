#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

CMAKE_FLAGS = -DCMAKE_INSTALL_PREFIX=/usr/lib

%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure -- $(CMAKE_FLAGS)

override_dh_install:
	dh_install -O--buildsystem=cmake

override_dh_clean:
#	dh_clean

override_dh_strip:

override_dh_usrlocal:
